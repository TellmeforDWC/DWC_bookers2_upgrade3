<div class="container">
  <div class="row">

      <h2>Following Users</h2>
        <div class="col-12">
          <% if @user.followees.count == 0 %>
            <p>No Following Users Are Exists</p>
          <% else %>
            <table class="table">
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="5"></th>
              </tr>
              <% @user.followees.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, size: "30x30", fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td>フォロー数：<%=link_to "#{user.followees.count}", user_show_followees_path(user.id) %></td>
                <td>フォロワー数：<%=link_to "#{user.followers.count}", user_show_followers_path(user.id) %></td>
                <td><%= link_to "show", user_path(user.id) %></td>
              </tr>
              <% end %>
            </table>
          <% end %>
        </div>
  </div>
</div>


