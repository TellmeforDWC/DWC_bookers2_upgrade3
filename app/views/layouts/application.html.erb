<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-Upgarde</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/a6e197d565.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
      <main>
        <p id="notice"><%= notice %></p>
      </main>

    <% if user_signed_in? %>
      <div class="container">
        <div class="row">
          <div class="col-md-12 offset-4">
              <%= form_with url:search_path, method: :get, local: true do |f| %>
                <%= f.text_field :content %>
                <%= f.select :model, options_for_select(["Book", "User"]) %>
                <%= f.select :method, options_for_select({"完全一致" => "perfect", "部分一致" => "partial", "前方一致" => "prefix", "後方一致" => "backward"}) %>
                <%= f.submit "検索" %>
              <% end %>
          </div>
        </div>
      </div>
    <% end %>

      <%= yield %>

    <%= render 'layouts/footer' %>
  </body>
</html>


